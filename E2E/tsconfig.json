{
  "compilerOptions": {
    "isolatedModules": true,
    "lib": [
      "esnext"
    ],
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es2018",
    "sourceMap": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": "./"
  },
  "exclude": [
    "node_modules"
  ]
}
